{
  "compileOnSave": true,
  "include": ["src/*"],
  "compilerOptions": {
    "target": "ES2015",
    "module": "umd",
    "moduleResolution": "node",
    "outDir": "dist",

    "strict": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "skipLibCheck": true
  }
}
